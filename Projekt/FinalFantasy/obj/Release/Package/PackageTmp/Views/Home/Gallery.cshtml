@model IEnumerable<FinalFantasy.Models.Image>

@{
    ViewBag.Title = "Gallery";
}

<h2>Galleri</h2>

<div>
    @ViewData["Error"]
</div>
<p class="button">
    @Html.ActionLink("Ladda upp bilder", "Upload", "Home")
</p>

    @foreach (var item in Model)
    {
        <h3>@item.Name</h3>
        <div><img src="~/images/@item.Name" width="200" height="200" /></div>
        <p class="button">@Html.ActionLink("Ta bort", "Delete", new { id=item.ImageID })</p>
    }