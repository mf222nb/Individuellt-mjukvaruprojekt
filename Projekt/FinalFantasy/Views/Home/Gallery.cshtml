@model IEnumerable<FinalFantasy.Models.Image>

@{
    ViewBag.Title = "Gallery";
}

<h2>Galleri</h2>

@Html.ActionLink("Ladda upp bilder", "Upload", "Home")

<p></p>

<table border="1">
<thead>
    <tr>
        <th>Image</th>
        <th>Name</th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="~/images/@item.Name" width="200" height="200" /></td>
            <td>@item.Name</td>
        </tr>
    }
</tbody>
</table>